.task-content
  background-color: #f5f5f5
  .name
    box-shadow: inset 1px 2px 7px -5px, 0 6px 16px -14px #000;
  .tags
    box-shadow: inset 1px 2px 7px -5px, 0 6px 16px -14px #000; 
.header
  p
    overflow-x: hidden
    font-size: 12px
  background-color: #ccc
  box-shadow: 0 1px 3px -1px #000
  padding: 2px
  &:first-child
    border-top: none
.expected-pomodoros
  box-shadow: inset 1px 2px 7px -5px, 0 6px 16px -14px #000;
  border-bottom: 1px dotted #ccc
.expected-pomodoros, .completed-pomodoros
  position: relative
  .label
    display: inline-block
    left: 15px
    right: 120px
  .count
    top: 50%
    position: absolute
    right: 2.75em
    margin-top: -9.5px
  .icon
    top: 50%
    position: absolute
    right: 1em
    margin-top: -12.5px
.pomodoro-item
  *
    p
      margin-bottom: 0
    i
      margin-bottom: 0
      margin-right: .5em
      &.icon-map-marker
        margin-left: 3px
        margin-right: 10px
    margin-bottom: .5em
    float: left
  .date
    margin-right: 1em
  .location
    clear: both
    margin-bottom: 0
#add-pomodoro-button
  background-color: #419f33
  color: white
  height: 2.5em
  padding: 0
  p
    position: absolute
    text-align: center
    right: 1px
    left: 1px
    top: 50%
    margin-top: -9.5px
.pomodoro-history
  overflow: auto
  &>*
    box-shadow: inset 1px 2px 7px -5px
    &:last-child 
      box-shadow: inset 1px 2px 7px -5px, 0 6px 16px -14px #000
