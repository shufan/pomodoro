  height: 25px
  width: 25px
  background-image: url('/img/pomodoro.svg')
  background-size: 24px 24px
  background-repeat: no-repeat

////////////////////
// GENERAL STYLES //
////////////////////
@import 'nib'

global-reset()

.clearfix:after
  visibility: hidden
  display: block
  content: ""
  clear: both
  height: 0

body, textarea
  font-family: 'Roboto' sans-serif

h1
  font-weight: bold
  font-size: 2em
  text-align: center

input,button, select
  background-color: white
  border-radius: 0
  border: 1px solid black

section
  overflow: auto
  position: absolute
  left: 0
  right: 0
  &:first-of-type
    top: 0
  &:last-of-type
    bottom: 0
  &.below-nav
    top: 3em
  &.below-secondnav
    top: 6em
  &.above-actbar
    bottom: 3em
  &.above-big-actbar
    bottom: 6em

section
  section
    position: relative
    padding: .5em
    p
      padding: .1em
      overflow: hidden

.scroll-y 
  overflow-y: auto

///////////////////////////
// NAVIGATION BAR STYLES //
///////////////////////////

.navbar
  height: 48px
  &.below-nav
    li
      border-top: none
  padding-top: 0
  overflow: hidden
  ul
    li
      position: relative
      box-sizing: border-box
      float: left
      display: block
      padding: 1em
      border: 1px solid black
      border-left: none
      height: 3em
      i
        position: absolute
        left: 50%
        margin-left: -10px
      &:first-child
        border-left: none
      &:last-child
        border-right: none
      &.current
        background-color: #eee
    .navleft
      position: absolute
      left: 0px
      border-right: 1px solid black
      width: 48px
      text-align: center
      &.empty
        border-right: none
    .navtitle
      white-space: nowrap
      position: absolute
      left: 48px
      right: 48px
      border-left: none
      border-right: none
      h1
        height: 1.5em
        font-size: 1em
        overflow: hidden
        text-overflow: ellipsis
    .navright
      position: absolute
      right: 0
      border-left: 1px solid black
      width: 48px
      text-align: center
      &.empty
        border-left: none

.actbar
  li
    text-align: center
  bottom: 0
  #plan-status
    width: 66.66%
  #start-button, #status-button
    width: 50%
    i
      margin-left: 5px
      position: relative
      left: 0
  #status-button
    padding: 1em .5em
  #plan-button, #done-button
    width: 33.33%
  #addtask-button, #log-button
    width: 100%
    i
      margin-left: .25em
      left: 0
      display: inline-block
      position: relative
  p
    display: inline

/////////////////
// FORM STYLES //
/////////////////
textarea
  resize: none
form
  width: 90%
  margin: 0 auto 0 auto
  input, button, textarea, select
    width: 100%
    padding: .5em .5em .5em .5em
    box-sizing: border-box
    font-size: 1em
    margin-top: .5em
    &:first-child
      margin-top: 0
  input, textarea, select
    display: block
    &:focus
      outline: none
  button
    background-color: white

/////////////////////////
// EMPTY DATASET STYLE //
/////////////////////////

.empty-message
  margin-top: 2em
  text-align: center

//////////////////////////////
// GLOBAL UI ELEMENT STYLES //
//////////////////////////////
.name
  font-size: 22px
  // background: #eee

.tags
  margin-bottom: -.5em
  p
    display: inline-block
    background: #eee
    padding: .1em
    margin-bottom: .5em

.input-prepend
  height: 38px
  margin-top: .5em
  box-sizing: border-box
  position: relative
  border: 1px solid black
  .add-on
    background-color: white
    box-sizing: border-box
    width: 34px
    position: absolute
    display: block
    text-align: center
    padding: 0.60em 0em 0.60em 0em;
  input
    width: auto
    height: 100%
    position: absolute
    left: 34px
    right: 0px
    margin: 0
    padding-left: 0
    border: none
  &:first-child
    margin-top: 0

.popover
  position: absolute
  top: 0px
  background-color: rgba(0, 0, 0, 0.75)
  .overlay-container
    height: 100%
    width: 80%
    position: relative
    margin: auto

@media only screen and (min-height : 0px) and (max-height : 390px)
  .popover
    *
      top: 0
      margin-top: 0
      position: relative