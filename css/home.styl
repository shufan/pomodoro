///////////////////////////////
// LOGIN/REGISTRATION STYLES //
///////////////////////////////

.splash-title
  margin: 2.25em 0

#signup-link
  position: absolute
  display: block
  text-align: center
  left: 0
  right: 0
  bottom: 1em

// prevent signup link from overlapping log in button when
// keyboard is shown
@media only screen and (min-height : 0px) and (max-height : 340px) {
    #signup-link {
      position: relative
    }
}

.user-form
  margin: 0 auto 10em auto
  input
    border-bottom: none
    margin: -2px 0 0 0
    border-top: 1px solid #ccc
    &:first-child
      border-top: 1px solid black 
    &:last-of-type
      border-bottom: 1px solid black
      margin-bottom: 1em
    &:focus
      outline: none

//////////////////////////
// HOME/TASKLIST STYLES //
//////////////////////////

.secondnav
  ul
    li
      position: relative
      box-sizing: border-box
      float: left
      display: block
      width: 33.33%
      padding: 1em
      border: 1px solid black
      height: 3em
      border-left: none
      h2
        text-align: center

.list
  li
    overflow: hidden
    position: relative
    box-sizing: border-box
    height: 48px
    border-bottom: 1px solid black
    &>*
      position: absolute
      top: 50%
    p
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      margin-top: -.5em
    .task-name
      left: 15px
      right: 120px
    .task-status
      position: absolute
      right: 2.75em
    .icon
      position: absolute
      right: 1em
      margin-top: -12.5px