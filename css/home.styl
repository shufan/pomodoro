///////////////////////////////
// LOGIN/REGISTRATION STYLES //
///////////////////////////////

.splash-title
  margin: 2.25em 0

.user-form
  width: 90%
  margin: 0 auto 10em auto
  *
    width: 100%
    padding: .5em .5em .5em .5em
    box-sizing: border-box
    font-size: 1em
  input
    display: block
    border-bottom: none
    margin: -2px 0 0 0
    border-top: 1px solid #ccc
    &:first-child
      border-top: 1px solid black 
    &:last-of-type
      border-bottom: 1px solid black
      margin-bottom: 1em
    &:focus
      outline: none
  button
    background-color: white

#signup-link
  display: block
  text-align: center

//////////////////////////
// HOME/TASKLIST STYLES //
//////////////////////////

.tasknav
  ul
    li
      position: relative
      box-sizing: border-box
      float: left
      display: block
      width: 33.33%
      padding: 1em
      border: 1px solid black
      height: 3em
      border-left: none
      &:last-child
        border-right: none
      h2
        text-align: center


